@model IEnumerable<EntityLayer.Concrete.News>
@{
    ViewBag.Title = "AdminNewsList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Admin Haber Listesi</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Başlık</th>
        <th>Kategori</th>
        <th>Tarih</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
        <th>Yorumlar</th>
    </tr>
    @foreach(var item in Model)
     {
        <tr>
            <td>@item.NewsID</td>
            <td>@item.NewsTitle</td>
            <td>@item.Category.CategoryName</td>
            <td>@item.NewsDate.ToShortDateString()</td>
            <td><a href="/News/DeleteNews/@item.NewsID" class="btn btn-danger">Sil</a></td>
            <td><a href="/News/UpdateNews/@item.NewsID" class="btn btn-success">Güncelle</a></td>
            <td><a href="/News/NewsDetails/@item.NewsID" class="btn btn-warning">Detaylar</a></td>
            <td><a href="/News/GetCommentByNews/@item.NewsID" class="btn btn-dark">Yorumlar</a></td>
        </tr>
     }
</table>
<a href="/News/AddNewNews/" class="btn btn-primary">Yeni Haber Ekle</a>