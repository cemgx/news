@model IEnumerable<EntityLayer.Concrete.News>

<div class="sidebar-box">
    <h3 class="heading">Yazarın Diğer Haberleri</h3>
    <div class="post-entry-sidebar">
        <ul>
            @foreach (var item in Model)
            {
                <li>
                    <a href="/News/NewsDetails/@item.NewsID">
                        <img src="@item.NewsImage" alt="Image placeholder" class="mr-4">
                        <div class="text">
                            <h4>@item.NewsTitle</h4>
                            <div class="post-meta">
                                <span class="mr-2">@(((DateTime)item.NewsDate).ToString("dd-MMM-yyyy")) </span>
                            </div>
                        </div>
                    </a>
                </li>
            }
        </ul>
    </div>
</div>