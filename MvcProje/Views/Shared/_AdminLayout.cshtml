@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Haberinyo Admin</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/AdminLTE-3.0.4/plugins/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <link rel="stylesheet" href="~/AdminLTE-3.0.4/dist/css/adminlte.min.css">
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>

<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="../../index3.html" class="brand-link">
                <img src="~/pics/news logo.png"
                     class="brand-image img-circle elevation-3"
       
                     style="opacity: .8">
                <span class="brand-text font-weight-light">Haberinyo Admin</span>
            </a>

            <div class="sidebar">
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="~/AdminLTE-3.0.4/dist/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
                    </div>
                    <div class="info">
                        <a href="#" class="d-block">Admin Sayfası</a>
                    </div>
                </div>

                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item">
                            <a href="/Admin/Admin/AdminNewsList" class="nav-link">
                                <i class="nav-icon fas fa-th"></i>
                                <p>
                                    Haberler
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/Admin/Admin/AdminNewsList2" class="nav-link">
                                <i class="nav-icon fas fa-blog"></i>
                                <p>
                                    Haberlere Hızlı Bakış
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/Admin/Admin/AuthorList" class="nav-link">
                                <i class="nav-icon fas fa-person-booth"></i>
                                <p>
                                    Yazarlar
                                </p>
                            </a>
                        </li>
                        <li class="nav-item has-treeview">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-comment"></i>
                                <p>
                                    Yorumlar
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a href="/Admin/Admin/AdminCommentListTrue" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Yayınlanan Yorumlar</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="/Admin/Admin/AdminCommentListFalse" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Kaldırılan Yorumlar</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a href="/Admin/Admin/AdminCategoryList" class="nav-link">
                                <i class="nav-icon fas fa-box"></i>
                                <p>
                                    Kategoriler
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/Admin/Admin/UpdateAboutList" class="nav-link">
                                <i class="nav-icon fas fa-address-book"></i>
                                <p>
                                    Hakkımızda
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/Admin/Admin/SendBox" class="nav-link">
                                <i class="nav-icon fas fa-phone"></i>
                                <p>
                                    İletişim
                                </p>
                            </a>
                        </li>
                        <li class="nav-item has-treeview">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-chart-bar"></i>
                                <p>
                                    Grafikler
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a href="/Admin/Admin/Chart1" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Haber Puan Pasta Grafik</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="/Admin/Admin/Chart2" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Haber Puan Sütun Grafik</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="/Admin/Admin/Chart3" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Haber Puan Çizgi Grafik</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a href="/User/Logout" class="nav-link">
                                <i class="nav-icon fas fa-sign-out-alt"></i>
                                <p>
                                    Çıkış yap
                                </p>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>

        <div class="content-wrapper">
            <section class="content-header">
                <div class="container-fluid">
                            @RenderBody()
                </div>
            </section>
        </div>

        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
        </aside>

    </div>
    <script src="~/AdminLTE-3.0.4/plugins/jquery/jquery.min.js"></script>
    <script src="~/AdminLTE-3.0.4/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/AdminLTE-3.0.4/dist/js/adminlte.min.js"></script>
    <script src="~/AdminLTE-3.0.4/dist/js/demo.js"></script>
</body>
</html>