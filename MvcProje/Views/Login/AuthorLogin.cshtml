
@{ 
    Layout = null;
}

<!DOCTYPE html>
<html lang="en-us">

<head>
    <title>Haberinyo Yazar Girişi</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="UTF-8" />
    <link href="//fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@400;500;700;900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/loginPageThings/css/style.css" type="text/css" media="all" />
    <link rel="stylesheet" href="~/loginPageThings/css/font-awesome.min.css" type="text/css" media="all">

</head>

<body>
    <section class="w3l-hotair-form">
        <h1>Haberinyo</h1>
        <div class="container">
            <div class="workinghny-form-grid">
                <div class="main-hotair">
                    <div class="content-wthree">
                        <h2>Haberinyo Yazar Girişi</h2>
                        @using (Html.BeginForm("AuthorLogin", "Login", FormMethod.Post))
                        {
                            <input type="text" class="text" name="AuthorMail" placeholder="Kullanıcı Adı" required="" autofocus>
                            <input type="password" class="password" name="AuthorPassword" placeholder="Şifre" required="" autofocus>
                            <button class="btn" type="submit">Giriş Yap</button>
                        }
                        <p class="account"><a href="#signup">Şifremi unuttum</a></p>
                        <p class="account"><a href="/Login/AdminLogin">Admin Girişi</a></p>
                    </div>
                    <div class="w3l_form align-self">
                        <div class="left_grid_info">
                            <img src="~/pics/aslan.jpg" alt="" class="img-fluid">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>