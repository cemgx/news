@model EntityLayer.Concrete.Contact

@{
    ViewBag.Title = "MessageDetails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Mesaj Detayları</h1>
                </div>
            </div>
        </div>
    </section>
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-3">
                    <a href="/Admin/Admin/SendBox" class="btn btn-primary btn-block mb-3">Gelen Kutusuna Dön</a>
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Klasörler</h3>
                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>

                        <div class="card-body p-0">
                            <ul class="nav nav-pills flex-column">
                                <li class="nav-item active">
                                    <a href="/Admin/Admin/SendBox" class="nav-link">
                                        <i class="fas fa-inbox"></i> Gelen Kutusu
                                        <span class="badge bg-primary float-right">@ViewBag.x</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>

                </div>
                <div class="col-md-9">
                    <div class="card card-primary card-outline">
                        <div class="card-header">
                            <h3 class="card-title">Mesaj Detayları</h3>
                        </div>

                        <div class="card-body p-0">
                            <div class="mailbox-read-info">
                                <h5>@Model.Subject</h5> <br />
                                <h6>
                                    Adı Soyadı:<b> @Html.DisplayFor(x => x.Name) @Html.DisplayFor(x => x.Surname) </b> <br />
                                    Mail: @Html.DisplayFor(x => x.Mail)
                                    <span class="mailbox-read-time float-right">@(((DateTime)Model.MessageDate).ToString("dd-MMM-yyyy"))</span>
                                </h6>
                            </div>

                            <div class="mailbox-read-message">
                                <p>@Model.Message</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>