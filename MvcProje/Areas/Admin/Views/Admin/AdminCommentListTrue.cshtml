@model IEnumerable<EntityLayer.Concrete.Comment>

@{
    ViewBag.Title = "AdminCommentListTrue";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="card-body">
                    @foreach (var item in Model)
                    {
                        <div class="post">
                            <div class="user-block">
                                <img class="img-circle img-bordered-sm" src="" alt="user image">
                                <span class="username">
                                    <a href="#">@item.UserName - @item.News.NewsTitle</a>
                                </span>
                                <span class="description">@(((DateTime)item.CommentDate).ToString("dd-MMM-yyyy"))</span>
                            </div>
                            <p>@item.CommentText</p>
                            <p>
                                <span class="float-right">
                                    <a href="/Admin/Admin/ChangeCommentStatusToFalse/@item.CommentID" class="link-black text-sm">
                                        <i class="fas fa-eye-slash"></i> Yorumu Sil
                                    </a>
                                </span>
                                <br />
                            </p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
</body>
</html>
