@model IEnumerable<EntityLayer.Concrete.News>

@{
    ViewBag.Title = "AdminNewsList2";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@{int puan = 0;}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Haber Listesi</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 1%">
                                ID
                            </th>
                            <th style="width: 30%">
                                Haber Başlığı
                            </th>
                            <th style="width: 5%">
                                Yazar
                            </th>
                            <th style="width: 20%">
                                Beğeni Oranı
                            </th>
                            <th style="width: 8%" class="text-center">
                                Kategori
                            </th>
                            <th style="width: 12%">
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            puan = item.NewsRating * 10;
                            <tr>
                                <td>@item.NewsID</td>
                                <td><b><i>@item.NewsTitle</i></b></td>
                                <td>
                                    <ul class="list-inline">
                                        <li class="list-inline-item">
                                            <img alt="Avatar" class="table-avatar" src="@item.Author.AuthorImage">
                                        </li>
                                    </ul>
                                </td>
                                <td class="project_progress">
                                    <div class="progress progress-sm">
                                        <div class="progress-bar bg-green" role="progressbar" aria-volumenow="57" aria-volumemin="0" aria-volumemax="100" style="width: @puan%">
                                        </div>
                                    </div>
                                    <small>
                                        @item.NewsRating / 10
                                    </small>
                                </td>
                                <td class="project-state">
                                    <span class="badge badge-success">@item.Category.CategoryName</span>
                                </td>
                                <td class="project-actions text-right">
                                    <a class="btn btn-primary btn-sm" href="/News/NewsDetails/@item.NewsID">
                                        <i class="fas fa-eye">
                                        </i>
                                        Sitede Gör
                                    </a>
                                    <a class="btn btn-info btn-sm" href="/Admin/Admin/UpdateNews/@item.NewsID">
                                        <i class="fas fa-pencil-alt">
                                        </i>
                                        Düzenle
                                    </a>
                                    <a class="btn btn-danger btn-sm" href="/Admin/Admin/DeleteNews/@item.NewsID">
                                        <i class="fas fa-trash">
                                        </i>
                                        Sil
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </section>
</body>
</html>